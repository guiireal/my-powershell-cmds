# ~/.bashrc: executed by bash(1) for non-login shells.

# Note: PS1 and umask are already set in /etc/profile. You should not
# need this unless you want different defaults for root.
# PS1='${debian_chroot:+($debian_chroot)}\h:\w\$ '
# umask 022

# You may uncomment the following lines if you want `ls' to be colorized:
# export LS_OPTIONS='--color=auto'
# eval "$(dircolors)"
# alias ls='ls $LS_OPTIONS'
# alias ll='ls $LS_OPTIONS -l'
# alias l='ls $LS_OPTIONS -lA'
#
# Some more alias to avoid making mistakes:
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'

alias ls='ls --color=auto'
alias grep='grep --color=auto'

export LS_COLORS="di=01;38;5;141:ex=01;32:ln=01;36:fi=00:pi=40;33:so=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01"

alias nrb="npm run build"
alias nt="npm test"
alias pao="php artisan optimize";
alias paoc="php artisan optimize:clear";
alias restart="git pull && pm2 restart all && pm2 logs"
alias wip="git add . && git commit -m \"wip\" && git push"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
